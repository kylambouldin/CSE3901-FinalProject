<p id="notice"><%= notice %></p>

<h1>Your Goals</h1>

<div class="button_center">
  <%= link_to 'New Goal', new_goal_path, :class=>'button secondary' %>
</div>

<div class="row">
  <% current_user.goals.each do |goal| %>
    <div class="medium-3 columns  goal end">
        <h3 class="goal_title"><%= goal.metric %></h3>
        <p>Goal:  <%= goal.value %> inches</p>
        <p>By: <%= goal.by_date.strftime("%m/%d/%Y") %></p>
        <p class="center_link"><%= link_to 'View Goal', goal %></p>
    </div>
  <% end %>
</div>


