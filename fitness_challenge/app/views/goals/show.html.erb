<p id="notice"><%= notice %></p>

<div class="display_box">
<h3 class="display_title">
  <%= @goal.metric %>
</h3>

<p>
  <strong>Value:</strong>
  <%= @goal.value %>
</p>

<p>
  <strong>By date:</strong>
  <%= @goal.by_date.strftime("%m/%d/%Y") %>
</p>

<p>
  <strong>Date entered:</strong>
  <%= @goal.date_entered.strftime("%m/%d/%Y") %>
</p>

<div class="display_link">
<%= link_to 'Back', goals_path %> |
<%= link_to 'Edit', edit_goal_path(@goal) %> |
<%= link_to 'Delete', @goal, method: :delete, data: { confirm: 'Are you sure?' } %> 
</div>
</div>
